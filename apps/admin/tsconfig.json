{
  "extends": "@rndm/typescript/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@rndm/ui/*": ["../../packages/ui/src/*"],
      "@rndm/database": ["../../packages/database/src/index.ts"],
      "@auth": ["./src/shared/config/auth.config.ts"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["src/next-env.d.ts", "next.config.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
