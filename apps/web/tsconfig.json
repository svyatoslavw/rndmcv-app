{
  "extends": "@rndm/typescript/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/auth": ["./auth.ts"],
      "@/prisma": ["./db.ts"],
      "@rndm/ui/*": ["../../packages/ui/src/*"],
      "@rndm/database": ["../../packages/database/src/index.ts"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["src/next-env.d.ts", "next.config.mjs", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
